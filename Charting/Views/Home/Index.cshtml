@model List<Charting.Models.OrderHistory>

@{
    ViewBag.Title = "Data Tables";
}

@Styles.Render("~/Content/DataTables-1.9.4/media/css/dataTables")

@section AdditionalScripts
{
    @Scripts.Render("~/bundles/datatables")

    <script type="text/javascript">
        $(function () {
            $(".table").dataTable({});
        });
    </script>
    
}

<h2>Order History</h2>
<p class="lead">Dynamically generated order history info</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Workgroup</th>
            <th>Vendor</th>			
            <th>Total</th>
            <th>Initiator</th>
            <th>Created</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <th>@order.OrderId</th>
                <td>@order.WorkgroupName</td>
                <td>@order.Vendor</td>
                <td>@string.Format("{0:0.##}", order.TotalAmount)</td>
                <td>@order.CreatedBy</td>
                <td>@order.DateCreated</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>